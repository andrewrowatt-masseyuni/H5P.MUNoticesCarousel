[ 
  {
  "name": "notices",
  "type": "list",
  "widgets": [
      {
        "name": "VerticalTabs",
        "label": "Default"
      }
    ],
  "label": "Notices",
  "entity": "notice",
  "min": 1,
  "max": 20,
  "field": {
	  "name": "notice",
	  "type": "group",
	  "label": "Notice",
	  "fields": [ 
		{
		  "name": "title",
		  "type": "text",
		  "label": "Title",
		  "default": "",
		  "description": "Title of notice"
		},
		{
			"name": "image",
			"type": "image",
			"label": "Profile picture",
			"optional": true,
			"description": "Picture of notice. If left blank a placeholder image will be displayed. Image dimensions should ideally be 150px by 150px to avoid scaling."
		  },
		{
		  "name": "update",
		  "type": "text",
		  "label": "Update",
		  "optional": true,
		  "default": "",
		  "description": "[update convention here]"
		},
		{
			"name": "content",
			"type": "text","widget": "html",
			"label": "Content",
			"default": "",
			"description": "Content of notice.",
			"enterMode": "p",
		  "tags": [
				"strong",
				"em",
				"u",
				"a",
				"hr"
		  ]
		},
		{
		  "name": "moreinformation",
		  "type": "text",
		  "label": "More information",
		  "default": "",
		  "description": "URL for more information. [Convention details]"
		},
		{
		  "name": "visible",
		  "type": "boolean",
		  "label": "Visible",
		  "default": true,
		  "description": "Display this notice."
		},
		{
			"name": "notes",
			"type": "text","widget": "html",
			"label": "Notes",
			"default": "",
			"description": "Administrative notes for this notice.",
			"enterMode": "p",
		  "tags": [
				"strong",
				"em",
				"u",
				"a",
				"hr"
		  ]
		},
				{
		  "name": "owner",
		  "type": "text",
		  "label": "Owner",
		  "description": "Owner or person responsible for this notice."
		},
		{
		  "name": "autohide",
		  "type": "text",
		  "label": "Auto hide",
		  "optional": true,
		  "default": "",
		  "description": "When to automatically hide this notice."
		}
	  ]
	}
},
{
  "name": "layout",
  "type": "select",
  "label": "Layout",
  "description": "Layout of items.",
  "options": [
    {
      "value": "auto",
      "label": "Auto"
    },
    {
      "value": "1",
      "label": "One column"
    }
  ],
  "default": "auto"
}
]